#!/bin/sh
#
# $Id: make_mon_data,v 1.2.4.1 2010/12/28 12:55:40 uehira Exp $
#

rawdir=/dat/raw
mondir=/dat/mon
#
while true
do
  latest=`cat $rawdir/LATEST`
  if [ \( -n "$latest" \) -a \( "$latest" != "$prev" \) ]
  then
    if [ -n "$prev" ]
    then
      cat $rawdir/$prev | raw2mon > $mondir/$prev
      echo $prev > $mondir/LATEST
    fi
    prev=$latest
    sleep 20
  else
    sleep 30
  fi
done
